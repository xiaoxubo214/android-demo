<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@drawable/icon_setting"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="我的相册"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"/>

    <ImageView
        android:id="@+id/new_message_iv"
        android:layout_width="@dimen/margin_six"
        android:layout_height="@dimen/margin_six"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/content_tv"
        android:background="@drawable/bg_red_circle"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/right_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:src="@drawable/arrow_right"/>

    <View
        android:id="@+id/line_item_bottom"
        style="@style/full_line_style"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:background="@color/dialog_style_color"/>


</RelativeLayout>
