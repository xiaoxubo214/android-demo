<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlTitleLayout"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_fifteen"
        android:paddingRight="@dimen/margin_fifteen"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/llLeftLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeftButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_return_back"
                android:scaleType="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLeftButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_two"
                android:paddingRight="@dimen/margin_ten"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/sp_16"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvClose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_five"
                android:paddingRight="@dimen/margin_ten"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/sp_16"
                android:text="关闭"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/margin_twenty"
            android:id="@+id/llCenterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvCenterLeftButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/sp_18"
                android:paddingTop="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_five"
                android:gravity="center"
                android:visibility="gone"
                android:text="
"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvCenterRightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titleColor"
                android:paddingLeft="@dimen/margin_fifteen"
                android:paddingRight="@dimen/margin_fifteen"
                android:paddingTop="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_five"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:text=""
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/margin_ten">

            <ImageView
                android:id="@+id/ivRightButton"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvRightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/sp_16"
                android:text=""
                android:layout_marginLeft="@dimen/margin_ten"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line_view"
        style="@style/full_line_style"
        android:layout_height="@dimen/margin_one"/>
</LinearLayout>
