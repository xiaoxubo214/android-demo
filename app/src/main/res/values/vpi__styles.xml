<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="StyledIndicators" parent="@style/AppTheme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="vpiTabPageNoBottomIndicatorStyle">@style/Widget.TabPageNoBottomIndicator</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="Widget"></style>

    <style name="TitleStyledIndicators" parent="@style/AppTheme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="vpiTabPageNoBottomIndicatorStyle">@style/Widget.TabPageNoBottomIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/margin_five</item>
        <item name="android:background">@drawable/def_vpi__tab_indicator_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="Widget.TabPageNoBottomIndicator" parent="Widget">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/margin_five</item>
        <item name="android:background">@drawable/vpi__tab_unselected_holo</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:maxLines">1</item>
    </style>
    
